{
    "name": "discord-message-tracker",
    "version": "1.0.0",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && powershell -NoProfile  -Command \"Copy-Item -Path .env -Destination dist/\"",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "clean": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force -Path dist/**/*\""
    },
    "dependencies": {
        "discord.js": "^14.18.0",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "mysql2": "^3.12.0",
        "node-schedule": "^2.1.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.7",
        "@types/node-schedule": "^2.1.7",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    }
}
